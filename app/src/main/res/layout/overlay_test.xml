<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:clickable="true"
    android:focusable="true">

    <!-- Main Menu View -->
    <LinearLayout
        android:id="@+id/main_menu_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="24dp"
        android:elevation="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Input Mode"
            android:textSize="24sp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btn_mouse_mode"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Mouse / Touchpad"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_keyboard_mode"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Keyboard"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btn_close_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

    <!-- Mouse/Touchpad Mode View -->
    <LinearLayout
        android:id="@+id/mouse_mode_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#80000000"
        android:visibility="gone"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Touchpad Mode"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp" />

        <!-- Touchpad Area -->
        <FrameLayout
            android:id="@+id/touchpad_area"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#40FFFFFF"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Touchpad Area\nMove your finger to control cursor"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"
                android:gravity="center"
                android:alpha="0.7" />

        </FrameLayout>

        <!-- Mouse Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btn_left_click"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Left Click"
                android:layout_marginEnd="8dp"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_right_click"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Right Click"
                android:layout_marginStart="8dp"
                android:textSize="16sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_back_to_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back to Menu"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

    <!-- Keyboard Mode View -->
    <LinearLayout
        android:id="@+id/keyboard_mode_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#80000000"
        android:visibility="gone"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Virtual Keyboard"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <!-- Text Input Area -->
        <EditText
            android:id="@+id/text_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type here..."
            android:textColor="#FFFFFF"
            android:textColorHint="#CCFFFFFF"
            android:background="#40FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Quick Keys Grid -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:layout_marginBottom="16dp">

            <Button android:id="@+id/key_escape" android:text="ESC" android:layout_margin="2dp" />
            <Button android:id="@+id/key_tab" android:text="TAB" android:layout_margin="2dp" />
            <Button android:id="@+id/key_enter" android:text="ENTER" android:layout_margin="2dp" />
            <Button android:id="@+id/key_space" android:text="SPACE" android:layout_margin="2dp" />
            
            <Button android:id="@+id/key_w" android:text="W" android:layout_margin="2dp" />
            <Button android:id="@+id/key_a" android:text="A" android:layout_margin="2dp" />
            <Button android:id="@+id/key_s" android:text="S" android:layout_margin="2dp" />
            <Button android:id="@+id/key_d" android:text="D" android:layout_margin="2dp" />

        </GridLayout>

        <Button
            android:id="@+id/btn_back_to_menu_keyboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back to Menu"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</FrameLayout>
